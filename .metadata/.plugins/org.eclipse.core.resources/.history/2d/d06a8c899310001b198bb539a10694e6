package chap03_searc;

import java.util.Arrays;
import java.util.Scanner;
//?—°?Šµë¬¸ì œ 06. ê²??ƒ‰ ?‹¤?Œ¨?‹œ ?‚½?… ?¬?¸?Š¸?˜ ê°’ì„ ì¶œë ¥?•˜?Š” ?”„ë¡œê·¸?¨ ?‘?„±?•˜ê¸?
public class SearchEx06 {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("?š”?†Ÿ?ˆ˜ ?…? ¥: ");
		
		int num = sc.nextInt();
		int[]x = new int[num];
		
		System.out.println("?˜¤ë¦„ì°¨?ˆœ?œ¼ë¡? ë°°ì—´?„ ì±„ìš°?„¸?š”.");
		
		
		x[0] = sc.nextInt(); //ë°°ì—´?˜ ì²? ?š”?†Œë¥? ë¨¼ì? ?…? ¥ 
		
		for(int i = 1; i < num; i++) { 
			do {
				x[i] = sc.nextInt(); 
			}while (x[i] < x[i-1]);  //ë°”ë¡œ ?• ?š”?†Œë³´ë‹¤ ?‘?œ¼ë©? ?‹¤?‹œ ?…? ¥
		}
		
		System.out.println("ê²??ƒ‰?•  ê°? : ");
		int key = sc.nextInt(); 
		
		int idx = Arrays.binarySearch(x, key);  //ë°°ì—´ x?—?„œ ?‚¤ê°’ì´ key?¸ ?š”?†Œë¥? ê²??ƒ‰
		
		if(idx < 0) {
			System.out.println("?‹¤?Œ¨: ê·? ê°’ì˜ ?š”?†Œê°? ?—†?Šµ?‹ˆ?‹¤.");
			idx = (-idx) - 1;
			System.out.println("?‚½?…?¬?¸?Š¸ : " + idx);
		}else 
			System.out.println("?„±ê³? ");
	
	}

}
